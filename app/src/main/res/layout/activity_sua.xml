<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgrthemmonan2"
    tools:context=".SuaActivity">
    <ImageView
        android:id="@+id/image"
        android:layout_margin="20dp"
        android:src="@drawable/ic_cemera"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <EditText
        android:id="@+id/ed_tenMon"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/image"
        android:hint="Nhập Tên Món Ăn"
        android:textColor="#000"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>
    <Spinner
        android:visibility="visible"
        android:id="@+id/spinner"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/ed_tenMon"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/ed_mota"
        android:hint="Thông Tin Món Ăn:"
        android:textStyle="italic"
        android:layout_below="@id/image"
        android:layout_width="match_parent"
        android:layout_height="320dp"/>
    <Button
        android:id="@+id/but"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#D6907A"
        android:text="Xóa"
        android:layout_below="@+id/ed_mota"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/but1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="#D6907A"
        android:text="Sửa"
        android:layout_toRightOf="@id/but"
        android:layout_below="@+id/ed_mota"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>