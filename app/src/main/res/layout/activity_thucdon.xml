<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgrthucdon"
    tools:context=".ThucdonActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"

        android:layout_gravity="center"
        android:layout_marginLeft="20dp"

        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="Quản Lí Nhân Viên "
        android:textColor="#fff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENU"
            android:textColor="#000000"
            android:textSize="40dp"
            android:textStyle="bold"
            />

    </LinearLayout>
    <LinearLayout
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1">

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#000"
                android:layout_gravity="center"
                android:background="@drawable/bgrthemmonan2"
                android:textSize="30dp"
                android:text="Bữa sáng"
                android:textStyle="bold"
                android:id="@+id/tv_buoisang"
                android:layout_width="50dp"
                android:layout_height="100dp"/>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1">
        <TextView

            android:layout_marginTop="30dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:background="@drawable/bgrthemmonan2"
            android:textStyle="bold"
            android:textSize="30dp"
            android:text="Bữa trưa"
            android:id="@+id/tv_buoitrua"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="100dp"/>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1">
        <TextView
            android:layout_marginTop="30dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:background="@drawable/bgrthemmonan2"
            android:textSize="30dp"
            android:text="Bữa tối"
            android:id="@+id/tv_buoitoi"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="100dp"/>
    </LinearLayout>
    </LinearLayout>
